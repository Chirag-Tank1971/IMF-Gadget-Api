<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Phoenix - Auth</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Simple fade & slide animations */
    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .fade-in-up {
      animation: fadeInUp 0.7s ease-out forwards;
    }
  </style>
</head>
<body class="text-white min-h-screen flex flex-col items-center justify-center px-4">
  <div class=" absolute top-0"></div>
    <% if (success && success.length > 0) { %>
      <div class="bg-green-100 text-green-800 p-3 rounded mb-4">
        <%= success[0] %>
      </div>
    <% } %>
    
    <% if (error && error.length > 0) { %>
      <div class="bg-red-100 text-red-800 p-3 rounded mb-4">
        <%= error[0] %>
      </div>
    <% } %>
  
  </div>
  <div class="absolute top-0 left-0 w-full h-full bg-cover bg-center z-[-1]" style="background-image: url('https://images.unsplash.com/photo-1506748686214-e9df14d4d9d0?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwzNjUyOXwwfDF8c2VhcmNofDJ8fGdyYWRpZW50fGVufDB8fHx8MTY5MjQ3NTk1Ng&ixlib=rb-1.2.1&q=80&w=1080');"></div>
  
  <!-- Auth Container -->
  <div class="bg-white text-gray-800 shadow-2xl rounded-2xl overflow-hidden flex flex-col md:flex-row max-w-5xl w-full fade-in-up" style="animation-delay: 0.6s;">
    
    <!-- Signup Section -->
    <div class="w-full md:w-1/2 p-10 bg-indigo-50">
      <h2 class="text-3xl font-bold mb-2 animate-fade-in">Welcome to <span class="text-indigo-600">Phoenix</span></h2>
      <p class="mb-6 text-gray-600">Create your account</p>

      <form action="/users/register" method="POST" class="space-y-4">

        <input type="text" name="fullname" placeholder="Full Name" required
          class="w-full px-4 py-2 border rounded-md bg-white border-gray-300 focus:ring-2 focus:ring-indigo-400 outline-none transition duration-300 hover:shadow-md"/>

        <input type="email" name="email" placeholder="Email" required
          class="w-full px-4 py-2 border rounded-md bg-white border-gray-300 focus:ring-2 focus:ring-indigo-400 outline-none transition duration-300 hover:shadow-md"/>

        <input type="password" name="password" placeholder="Password" required
          class="w-full px-4 py-2 border rounded-md bg-white border-gray-300 focus:ring-2 focus:ring-indigo-400 outline-none transition duration-300 hover:shadow-md"/>

        <button type="submit"
          class="w-full py-2 bg-indigo-600 text-white font-semibold rounded-full hover:bg-indigo-700 transition duration-300 hover:scale-105">
          Create My Account
        </button>
      </form>
    </div>

    <!-- Login Section -->
    <div class="w-full md:w-1/2 p-10 bg-white">
      <h2 class="text-3xl font-bold mb-2 text-indigo-700">Log In</h2>
      <p class="mb-6 text-gray-600">Access your account</p>

      <form action="/users/login" method="POST" class="space-y-4">
        <input type="email" name="email" placeholder="Email" required
          class="w-full px-4 py-2 border rounded-md bg-gray-50 border-gray-300 focus:ring-2 focus:ring-indigo-400 outline-none transition duration-300 hover:shadow-md"/>

        <input type="password" name="password" placeholder="Password" required
          class="w-full px-4 py-2 border rounded-md bg-gray-50 border-gray-300 focus:ring-2 focus:ring-indigo-400 outline-none transition duration-300 hover:shadow-md"/>

        <input type="submit"
          class="w-full py-2 bg-purple-600 text-white font-semibold rounded-full hover:bg-purple-700 transition duration-300 hover:scale-105">
        </input>
      </form>
    </div>

  </div>
</body>
</html>
